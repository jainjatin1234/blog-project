<%- include('./../header.ejs') %>

<section class="dashboard-wrap mtb-40">
  <div class="container">
    <div class="body-content">
      <div class="row">
        <div class="col-md-3">
          <%- include('./sidebar.ejs') %>  

        </div>
        <div class="col-md-9">
          <div class="dash-right">
            <div class="dash-header">
              <div class="dash-title">
                <h1>USER</h1>
              </div>
            </div>
            <table class="table table-bordered table-striped">
              <tr>
                <th>#ID</th>
                <th>NAME</th>
                <th>EMAIL</th>
                <th>PHONE</th>
                <th>VERIFIED</th>
                <th>COMMENT</th>
                <th></th>
                <th>Action</th>
              </tr>

              <% i=1 %>
              <% d=d.reverse() %>
              <% d.forEach((item)=>{ %>
              <tr>
                <td><%= i++ %></td>
                <td><%= item.name %></td>
                <td><%= item.email %></td>
                <td><%= item.phone %></td>
                <td><%= item.verified %></td>
                <td>
                  <form action="/update_approve/<%= item._id %>" method="post">
                    <textarea name="comment"></textarea>
                    <input type="hidden" name="name" value="<%= item.name %>">
                    <input type="hidden" name="email" value="<%= item.email %> ">

                    <td>
                      <button type="submit" name="verified" class="btn btn-info" value="Approved">Approved</button>
                      <button type="submit" name="verified" class="btn btn-danger" value="Reject">Reject</button>
                      
                    </td>
                  </form>
                </td>

                <td>
                  <a href="/userview/<%= item._id %>" class="btn btn-info btn-sm">View</a>
                  <a href="/useredit/<%= item._id %>" class="btn btn-info btn-sm">Edit</a>
                  <a href="/userdelete/<%= item._id %>" class="btn btn-info btn-sm">Delete</a>
                </td>
          
              </tr>

              <% }) %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('./../footer.ejs') %>
