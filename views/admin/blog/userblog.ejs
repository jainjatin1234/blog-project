<%- include('../../header.ejs') %>

<section class="dashboard-wrap mtb-40 pt-5">
    <div class="container ">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <%- include('../sidebar.ejs') %>  
                </div>
                <div class="col-md-9">
                  <div class="dash-right">
                      <div class="dash-header">
                          <div class="dash-title">
                              <h1> User Blogs</h1>
                          </div>
                      </div>
        <table class="table table-bordered table-striped">
            <tr>
                <th>#ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
  
            <% d.forEach((item)=>{ %>
              <tr>
                <td><%= item._id %></td>
                <td><%= item.title %></td>
            <td><%= item.description.slice(0,100) %></td>
                <td><img src="<%= item.image.url %>" width="50px" alt=""></td>
                <td><%= item.category %></td>

                <td>
                  <a href="/blogview/<%= item._id %>" class="btn btn-info btn-sm" >view</a>
                    <a href="/blogedit/<%= item._id %>" class="btn btn-info btn-sm" >Edit</a>
                    <a href="/blogdelete/<%= item._id %>" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
  
           <%  }) %>
  
        
        </table>
    </div>   
</div>
</div>
</div>

</div>
</section>
<%- include('../../footer.ejs') %>