<%- include('./header.ejs') %>
<br>
<section class="cmspage mtb-40" style=" margin-top: 127px;">
    <div class="container " style="background-color: rgb(159,237,237);" >
      <div class="page-desc">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <h1>Contact</h1>

            <% if(message5.length >0){ %>
              <div class="alert alert-danger">
               <%= message5 %>
              </div>
           <% } %>

            <form action="/insertcontact" method="post">
              <div class="form-group" >
                <input type="text" name="name" class="form-control" placeholder="Name" style="background-color:rgb(255,250,250) ;">
              </div>
              <div class="form-group">
                <input type="text" name="email" class="form-control" placeholder="E-Mail" style="background-color:rgb(255, 250, 250) ;">
              </div>
              <div class="form-group">
                <input type="text" name="phone" class="form-control" placeholder="Phone" style="background-color:rgb(255,250,250) ;">
              </div>
              <div class="form-group">
                <textarea name="message" rows="5" class="form-control" placeholder="Message" style="background-color:rgb(255,250,250) ;"></textarea>
              </div>
              <div class="form-group">
                <button class="btn btn-dark" style="background-color: darkorange;">Send Message</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
</section>

<%- include('./footer.ejs') %>